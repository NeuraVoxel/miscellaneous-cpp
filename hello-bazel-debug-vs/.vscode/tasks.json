{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bazel",
            "args": [
                "build",
                "//...",
                "--config=debug",
                "--spawn_strategy=local",
                "--verbose_failures"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "env": {
                    "BAZEL_CXXOPTS": "-std=c++17"
                }
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "bazel",
            "args": [
                "clean",
                "--expunge"
            ],
            "problemMatcher": []
        }
    ]
}